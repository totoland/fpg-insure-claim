        </dependency>
        <dependency>
            <groupId>com.totoland</groupId>
            <artifactId>fpg-report-dao</artifactId>
            <version>${fpg-report-dao-version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>asm</artifactId>
                    <groupId>asm</groupId>
                </exclusion>
